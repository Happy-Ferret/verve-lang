3 + 5 // 8 : Int

interface Num<T> {
  #assoc(left)
  operator (T) + (T) -> T

  #assoc(left) #prec(equal(+))
  operator (T) - (T) -> T

  #assoc(left) #prec(higher(+))
  operator (T) * (T) -> T

  #assoc(left) #prec(equal(*))
  operator (T) / (T) -> T
}

implementation Num<Int> {
  operator (x: Int) + (y: Int) -> Int {
    int_add(x, y)
  }
  operator (x: Int) - (y: Int) -> Int {
    int_sub(x, y)
  }
  operator (x: Int) * (y: Int) -> Int {
    int_mul(x, y)
  }
  operator (x: Int) / (y: Int) -> Int {
    int_div(x, y)
  }
}

